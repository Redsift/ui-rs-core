@import '../brand.import';
@import '../lib/button.import';
@import '../lib/gradients.import';

setup-buttons($customSettings = {}) {
	/*
   * Default settings:
   */
	$defaultSettings = {
		defaultFontSize: 1rem,
		colourDefault: $ui-rs-core.themes.light.text,
		colourDisabled: #f1f1f1,
    colourDanger: #ed1651,
    colourButton: $brandGrey,
    colourShadow: $brandRed,
		paddingTop: 1.9375em,
		paddingBottom: 1.9375em,
		paddingLeft: 0.75em,
		paddingRight: 0.75em
	}

	$settings = merge($defaultSettings, $customSettings);

  button {
      padding-top: $settings.paddingTop;
      padding-bottom: $settings.paddingBottom;
			padding-left: $settings.paddingLeft;
			padding-right: $settings.paddingRight;

      color: $settings.red.color.default;
      background: $settings.red.background.default;

      border: 1px solid $settings.red.color.default;

      font-family: $settings.fontFamily;
			font-size: $settings.defaultFontSize;

      // TODO: do we have a focused style?
      &:focus {
        outline: none;
        // color: $settings.red.color.hover;
        // background: $settings.red.background.hover;
        // border: 1px solid $settings.red.color.hover;
      }

      &:hover {
        color: $settings.red.color.hover;
        background: $settings.red.background.hover;
        border: 1px solid $settings.red.background.hover;
      }

      &:disabled {
        color: $settings.red.color.disabled;
        background: $settings.red.background.disabled;
        border: 1px solid $settings.red.background.disabled;
      }
  }

  .rs-btn--selected {
    color: $settings.red.color.pressed;
    background: $settings.red.background.pressed;
    border: 1px solid $settings.red.background.pressed;

    &:hover {
      color: $settings.red.color.pressed;
      background: $settings.red.background.pressed;
      border: 1px solid $settings.red.background.pressed;
    }
  }

  create-bem-button('red', $settings);
  create-bem-button('green', $settings);
  create-bem-button('blue', $settings);

  .hero button.danger,
  button.danger {
      color: white;
      background-color: $settings.colourDanger;

      &:hover {
          background-color: desaturate($settings.colourDanger, 20%);
      }

      &:disabled {
          background-image: pattern--core();
      }

      &:disabled:hover {
          background-color: $settings.colourDanger;
          background-image: pattern--core();
      }
  }

  .hero button {
      color: white;
      font-size: 1.2em;
      background-color: transparent;
      box-shadow: 0 0 0 1px white;

      &:focus {
          outline: none;
          box-shadow: 0 0 0 1px $settings.colourShadow;
      }

      &:hover {
          background-color: rgba(255,255,255,0.2);
      }

      &:disabled {
          background-image: pattern--core(rgba(255,255,255,0.3));
      }

      &:disabled:hover {
          background-color: transparent;
          background-image: pattern--core(rgba(255,255,255,0.3));
      }
  }
}
